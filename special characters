def count_special_characters(statement):
    special_characters = "!@#$%^&*()-_+={}[]|\:;\"'<>?,./"
    count = 0
    for char in statement:
        if char in special_characters:
            count += 1
    return count

# Sample Input
given_statement = "Modi Birthday @ September 17, #&$% is the wishes code for him."

# Count special characters
special_count = count_special_characters(given_statement)

# Output
print("Number of special characters:", special_count)
